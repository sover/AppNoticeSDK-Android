    <color name="ghostery_dialog_background_color">#E5E5E5</color>
    <!-- Dialog button color for all but Explicit Decline -->
    <color name="ghostery_dialog_button_color">#333333</color>

    <!-- Explicit Dialog colors -->
    <!-- Dialog button text color for all but Explicit Decline -->
    <color name="ghostery_dialog_explicit_accept_button_text_color">#FFFFFF</color>
    <!-- Dialog button text color for Explicit Decline -->
    <color name="ghostery_dialog_explicit_decline_button_text_color">#FFFFFF</color>
    <!-- Dialog button color for Explicit Decline -->
    <color name="ghostery_dialog_explicit_decline_button_color">#333333</color>

