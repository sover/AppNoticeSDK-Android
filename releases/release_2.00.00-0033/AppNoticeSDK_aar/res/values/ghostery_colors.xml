<resources>
    <!-- App colors -->
    <!-- Action Bar/Header text color for both the vendor list and the vendor detail screens -->
    <color name="ghostery_header_text_color">#000000</color>
    <!-- Action Bar/Header background color for both the vendor list and the vendor detail screens -->
    <color name="ghostery_header_background_color">#009688</color>
    <!-- Color of the vendor message text at the top of the privacy preferences screen -->
    <color name="ghostery_preferences_message_text_color">#212121</color>
    <!-- Color of the Opt-in main text and the On and Off control text on the privacy preferences screen -->
    <color name="ghostery_preferences_optin_text_color">#212121</color>
    <!-- Color of the Opt-in subtext on the privacy preferences screen -->
    <color name="ghostery_preferences_optin_subtext_color">#616161</color>
    <!-- Color of the background for the privacy preferences screen -->
    <color name="ghostery_preferences_optin_background_color">#FFFFFF</color>
    <!-- Section divider line for both the vendor list and the vendor detail screens -->
    <color name="ghostery_divider_color">#46AAAAAA</color>
    <!-- Color of the Category header text in the vendor list -->
    <color name="ghostery_list_category_text_color">#9FA2A4</color>
    <!-- Color of the vendor name text in the vendor list -->
    <color name="ghostery_list_vendor_name_text_color">#212121</color>
    <!-- Color of the divider used between categories in the vendor list -->
    <color name="ghostery_list_category_divider_color">#AAAAAA</color>
    <!-- Color of the divider used between list items in the vendor list (default matches background color so it disappears) -->
    <color name="ghostery_list_divider_color">#FFFFFF</color>
    <!-- Vendor list and list item background color -->
    <color name="ghostery_list_background">#FFFFFF</color>



    <!-- Explicit and Implied Dialog colors -->
    <!-- Header text color for both the Implied and the Explicit consent dialogs -->
    <color name="ghostery_dialog_header_text_color">#000000</color>
    <!-- Message text color for both the Implied and the Explicit consent dialogs -->
    <color name="ghostery_dialog_message_text_color">#000000</color>
