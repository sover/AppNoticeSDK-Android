<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="ghostery_AppNoticeTheme" parent="ghostery_AppNoticeTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="ghostery_AppNoticeTheme.Button" parent="ghostery_AppNoticeTheme">
        <item name="colorAccent">@color/ghosteryColorButtonPrimary</item>
        <item name="android:textColor">@color/ghosteryColorButtonTextPrimary</item>
    </style>

    <style name="ghostery_AppNoticeTheme.Button.Secondary" parent="ghostery_AppNoticeTheme">
        <item name="colorAccent">@color/ghosteryColorButtonSecondary</item>
        <item name="android:textColor">@color/ghosteryColorButtonTextSecondary</item>
    </style>

    <style name="ghostery_inverse_button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/ghosteryColorButtonTextPrimary</item>
        <item name="android:textColor">@color/ghosteryColorPrimary</item>
    </style>

</resources>