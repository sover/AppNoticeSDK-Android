<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="ghostery_AppNoticeTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorAccent">@color/ghostery_header_background_color</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
    </style>

    <style name="ghostery_AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/ghostery_header_background_color</item>
        <item name="android:actionBarStyle">@style/ghostery_ActionBar</item>

        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ghostery_ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/ghostery_TitleBarTextColor</item>
        <item name="android:foreground">#00FF00</item>
        <item name="android:textColor">#00FFFF</item>
        <item name="android:background">@color/ghostery_header_background_color</item>
    </style>

    <style name="ghostery_TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ghostery_header_text_color</item>
    </style>

    <style name="ghostery_style_custom_list_adapter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ghostery_style_fragment_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ghostery_style_fragment_detail_header" parent="ghostery_style_fragment_detail">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>